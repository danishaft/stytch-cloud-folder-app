// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id
  name    String
  email   String   @unique
  folders Folder[]
}

model Folder {
  id        String @id @default(uuid())
  name      String
  creator   User   @relation(fields: [creatorId], references: [id])
  creatorId String 

  @@index([creatorId])
}
